extends layout

block content
    .w3-card-4
        header.w3-container.w3-pink
            h1 NIPC: #{nome}
            h2 Nome da Entidade: #{entidade}
            p Valor Total do Contratos: #{valorContratos}€
        .w3-container
           table.w3-table-all
                tr
                    th Id
                    th Objeto do Contrato
                    th Data de Celebração do Contrato
                    th Preço Contratual €
                    th NIPC (entidade comunicante)
                    th Entidade Comunicante
                
                each contrato in lista
                    tr
                        td 
                            a(href= "/" + contrato._id) #{contrato._id}
                        td= contrato.objectoContrato
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual
                        td
                            a(href= "entidades/" + contrato.NIPC_entidade_comunicante) #{contrato.NIPC_entidade_comunicante} 
                        td= contrato.entidade_comunicante
        footer.w3-container.w3-pink
            a(href="/").w3-button.w3-red Voltar Página Inicial
            address Gerado para o Teste - Mariana Silva
